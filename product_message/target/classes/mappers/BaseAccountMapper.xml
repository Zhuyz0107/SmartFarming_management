<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyz.product_message.dao.BaseAccountMapper">
    <!--基础查询结果集-->
    <resultMap id="BaseResultMap" type="baseAccount">
        <id column="account_id" property="accountId"/>
        <result column="username" property="username"/>
        <result column="realname" property="realname"/>
        <result column="password" property="password"/>
        <result column="photo" property="photo"/>
        <result column="email" property="email"/>
        <result column="mobile" property="mobile"/>
        <result column="status" property="status"/>
    </resultMap>

    <!--基础sql字段-->
    <sql id="Base_Column_List">
        account_id, username, realname, password, photo, email, mobile, status
    </sql>

    <!--根据用户名和密码查询用户信息-->
    <select id="selectAccountInfo" resultMap="BaseResultMap">
        select *
        from base_account
        where username = #{username} and password = #{password}
    </select>

    <!--根据id查询用户信息-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from base_account
        where account_id = #{accountId}
    </select>
</mapper>